# Environment Variables Template
# Copy this file to .env.local and fill in the actual values

# ====================
# Firebase Configuration
# ====================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# Firebase Admin SDK (Server-side only)
FIREBASE_ADMIN_PRIVATE_KEY=your_private_key_here
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com

# ====================
# Third-party API Keys
# ====================
FIGMA_ACCESS_TOKEN=your_figma_access_token_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ====================
# Security & Encryption
# ====================
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here
CSRF_SECRET=your_csrf_secret_here

# ====================
# Development & Testing
# ====================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ====================
# Database URLs (if applicable)
# ====================
DATABASE_URL=your_database_url_here
REDIS_URL=your_redis_url_here

# ====================
# Email Service (if applicable)
# ====================
SENDGRID_API_KEY=your_sendgrid_api_key_here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ====================
# Analytics & Monitoring
# ====================
GOOGLE_ANALYTICS_ID=GA_TRACKING_ID
SENTRY_DSN=your_sentry_dsn_here

# ====================
# GitHub Integration
# ====================
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# ====================
# Security Tokens for CI/CD
# ====================
SEMGREP_APP_TOKEN=your_semgrep_token_here
CODECOV_TOKEN=your_codecov_token_here

# ====================
# Production Environment Variables
# ====================
# VERCEL_URL - Automatically set by Vercel
# VERCEL_ENV - Automatically set by Vercel
# VERCEL_REGION - Automatically set by Vercel
