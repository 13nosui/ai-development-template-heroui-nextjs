# Firebase設定（本番環境では適切な値に置き換えてください）
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=1234567890
NEXT_PUBLIC_FIREBASE_APP_ID=1:1234567890:web:abcd1234efgh5678

# Figma API設定（オプション）
FIGMA_ACCESS_TOKEN=your_figma_access_token
FIGMA_PERSONAL_ACCESS_TOKEN=your_figma_personal_access_token
FIGMA_WEBHOOK_SECRET=your_figma_webhook_secret_32_chars

# セキュリティ設定
ENCRYPTION_KEY=your_32_character_encryption_key_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# 開発環境設定
NODE_ENV=development
PORT=3000

# セキュリティ設定（本番環境）
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# CORS_ORIGIN=https://yourdomain.com

# ログ設定
LOG_LEVEL=info
# SENTRY_DSN=your_sentry_dsn_here
